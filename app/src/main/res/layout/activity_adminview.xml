<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/adminDashboardHeader"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="#388E3C"
        android:gravity="center"
        android:padding="10dp"
        android:text="Admin Dashboard"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- Title or Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="63dp"
            android:layout_height="61dp"
            android:contentDescription="View Queue Status Icon"
            android:src="@drawable/queue_status1" />

        <Button
            android:id="@+id/viewQueueStatusButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Queue Status"
            android:backgroundTint="#388E3C"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp">

    <ImageView
        android:layout_width="63dp"
        android:layout_height="61dp"
        android:contentDescription="Chk user details"
        android:src="@drawable/check_availabilty"
        android:layout_marginTop="22dp"
        app:tint="#388E3C" />
    <Button
        android:id="@+id/viewRegisteredUserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Registered Users"
        android:backgroundTint="#388E3C"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="73dp"
            android:layout_height="71dp"
            android:layout_marginTop="22dp"
            android:contentDescription="Chk user details"
            android:src="@drawable/history"
            app:tint="#388E3C" />

        <Button
            android:id="@+id/viewPaymentHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment History"
            android:backgroundTint="#388E3C"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</LinearLayout>
