<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    tools:context=".SlotAvailabilityActivity">

    <!-- Header Section -->
    <TextView
        android:id="@+id/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#388E3C"
        android:padding="16dp"
        android:text="Slot Availability"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <!-- Slot Availability Section -->
    <TextView
        android:id="@+id/slotStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Slots: 5"
        android:textSize="20sp"
        android:textColor="#388E3C"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerText"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Slot List -->
    <LinearLayout
        android:id="@+id/slotList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/slotStatusText">

        <!-- Slot 1 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#C8E6C9"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/slot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Point 1: Available"
                android:textColor="#388E3C"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Slot 2 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFCDD2"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/slot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Point 2: Occupied"
                android:textColor="#B71C1C"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Slot 3 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#C8E6C9"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/slot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Point 3: Available"
                android:textColor="#388E3C"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
